<h2>You are in a call with <%= number_to_phone(@contact_info['From']) %></h2>

<div class="row">
  <div class="col-md-4 col-md-push-8">
    <div class="panel panel-primary client-controls">
      <div class="panel-heading">
        <h3 class="panel-title">Answer a call</h3>
      </div>
      <div class="panel-body">
        <p><strong>Status</strong></p>
        <div class="well well-sm" id="call-status">
          Connecting to Twilio...
        </div>

        <button class="btn btn-lg btn-success answer-button" disabled>Answer call</button>
        <button class="btn btn-lg btn-danger hangup-button" disabled onclick="hangUp()">Hang up</button>
      </div>
    </div>
  </div>

  <div class="col-md-8 col-md-pull-4">
    <p class="well">
      <strong>From: </strong><%= "#{@contact_info['FromCity']}, #{@contact_info['FromState']} #{@contact_info['FromCountry']}" %>
    </p>
    <h3>Notes:</h3>
    <%= form_for @contact do |f| %>
      <div class="form-group">
        <%= f.text_area :notes, rows: 10, class: 'form-control call-notes-text' %>
      </div>
      <%= f.submit 'Update Contact Notes', class: 'btn btn-primary', data: { confirm: 'Are you sure you want to save?' } %>
    <% end %>
  </div>
</div>
